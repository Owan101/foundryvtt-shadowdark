<div class="item-details">
	<div class="weapon-details">
		<div class="weapon-detail">
			<label>{{localize 'SHADOWDARK.item.weapon_type'}}</label>
			<select name="system.type">
				{{selectOptions
					config.WEAPON_TYPES
					selected=system.type
					localize=false
				}}
			</select>
		</div>
		<div class="weapon-detail">
			<label>{{localize 'SHADOWDARK.item.weapon_range'}}</label>
			<select name="system.range">
				{{selectOptions
					config.RANGES
					selected=system.range
					localize=false
				}}
			</select>
		</div>
		<div class="weapon-detail">
			<label>{{localize 'SHADOWDARK.item.weapon_damage.oneHanded'}}</label>
			<input
				name="system.damage.oneHanded"
				type="text"
				value="{{item.weapon_damage.oneHanded}}"
			/>
		</div>
		<div class="weapon-detail">
			<label>{{localize 'SHADOWDARK.item.weapon_damage.twoHanded'}}</label>
			<input
				name="system.damage.twoHanded"
				type="text"
				value="{{item.weapon_damage.twoHanded}}"
			/>
		</div>
		<div class="armor-detail">
			<label>{{localize 'SHADOWDARK.item.weapon.base_weapon.title'}}</label>
			<select name="system.baseWeapon">
				<option value="">&mdash;</option>
				{{selectOptions
					baseWeapons
					selected=system.baseWeapon
					localize=false
				}}
			</select>
		</div>
	</div>
	<div class="item-properties">
		<div class="item-property">
			<label>{{localize 'SHADOWDARK.item.properties'}}</label>
			<a
				class="item-selector"
				data-select-type="itemProperty"
				data-item-type="weapon"
				for="system.properties"
			>
				<i class="fa-solid fa-pen-to-square fa-sm"></i>
			</a>
			<ul class="tags">
				{{#each propertyItems}}
					<li
						class="tag tag_primary"
						data-tooltip="{{this.system.description}}"
					>
						{{this.name}}
					</li>
				{{/each}}
			</ul>
		</div>
	</div>
</div>
